{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "bun run .claude/hooks/capture_plan.ts",
            "timeout": 10000
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command", 
            "command": "bun run hooks/pre_compact.ts",
            "timeout": 30000
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bun run hooks/stop_review.ts",
            "timeout": 20000,
            "_comment": "Auto-commits changes and reviews for deviations"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "command",
            "command": "bun run hooks/post_compact.ts",
            "timeout": 5000
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": ".claude/statusline.sh",
    "padding": 0
  },
  "_cc-pars-config": {
    "stop-hook": {
      "enabled": true,
      "auto-commit": true,
      "deviation-detection": true,
      "auto-revert-on-critical": false,
      "_comment": "Set auto-revert-on-critical to true for stricter control"
    }
  }
}